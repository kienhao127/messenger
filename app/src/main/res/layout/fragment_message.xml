    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:id="@+id/textInputLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp">
        <ImageView
            android:padding="8dp"
            android:id="@+id/imageViewEmoji"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/editText"
            android:src="@drawable/emoji"/>
        <EditText
            android:id="@+id/editText"
            android:background="@drawable/input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:hint="Nhập tin nhắn"
            android:paddingHorizontal="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:maxLines="5"
            android:layout_toLeftOf="@+id/imageViewSend"
            android:layout_toStartOf="@+id/imageViewSend"
            android:layout_toRightOf="@+id/imageViewEmoji"
            android:layout_toEndOf="@+id/imageViewEmoji" />
        <ImageView
            android:id="@+id/imageViewAttachFile"
            android:padding="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/attach_file"
            android:layout_alignBottom="@+id/editText"
            android:visibility="visible"
            android:layout_toLeftOf="@+id/imageViewImage"/>
        <ImageView
            android:id="@+id/imageViewImage"
            android:padding="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/image"
            android:layout_alignBottom="@+id/editText"
            android:visibility="visible"
            android:layout_alignParentRight="true" />
        <ImageView
            android:id="@+id/imageViewSend"
            android:padding="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/send"
            android:layout_alignBottom="@+id/editText"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>